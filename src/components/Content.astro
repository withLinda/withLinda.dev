---
export interface Props { className?: string }
const { className = '' } = Astro.props
---
<main class={`page-content ${className}`}>
  <slot />
</main>

<style is:global>
.page-content {
  padding-top: calc(var(--header-h, 72px) + 24px);
  padding-inline: 1.25rem;
  margin-inline: auto;
  max-width: 60rem; /* 960px */
}
@media (min-width: 1024px) {
  .page-content { max-width: 72rem; }
}
</style>
