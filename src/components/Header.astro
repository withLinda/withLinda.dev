---
import HeaderLink from './HeaderLink.astro'
import ThemeToggleButton from './ThemeToggleButton.tsx'
import { ABOUT_URL, SITE_TITLE } from '../config'
import GithubIcon from './GithubIcon.tsx'
import MobileMenu from './MobileMenu'
---
<header class="site-header bg-glass-header">
  <div class="site-header__container">
    <nav class="site-header__nav">
      <a href="/" class="group decoration-transparent hover:decoration-current">
        <h1 class="font-semibold tracking-wide text-[1.05rem] md:text-[1.15rem] text-everforest-fg dark:text-everforest-fg">
          {SITE_TITLE}
        </h1>
      </a>

      <div class="hidden md:flex items-center gap-5 ms-6">
        <HeaderLink href={ABOUT_URL}>About</HeaderLink>
        <HeaderLink href="https://github.com/withLinda/withLinda.dev" target="_blank">
          <GithubIcon client:load />Source
        </HeaderLink>
      </div>

      <div class="flex-1" />

      <ThemeToggleButton client:load />

      <div class="md:hidden">
        <MobileMenu client:visible>
          <HeaderLink href={ABOUT_URL}>About</HeaderLink>
          <HeaderLink href="https://github.com/withLinda/withLinda.dev" target="_blank">
            <GithubIcon client:load />Source
          </HeaderLink>
        </MobileMenu>
      </div>
    </nav>
  </div>
</header>

<style is:global>
:root { --header-h: 64px; }
@media (min-width: 768px) { :root { --header-h: 72px; } }

.site-header {
  position: fixed;
  inset-block-start: 0;
  inset-inline: 0;
  z-index: 40;
}
.site-header__container {
  max-width: 72rem;
  margin-inline: auto;
  padding-inline: 1rem;
  padding-block: .5rem;
}
@media (min-width: 1024px) {
  .site-header__container {
    padding-inline: 1.5rem;
    padding-block: .75rem;
  }
}
.site-header__nav {
  display: flex;
  align-items: center;
  gap: .75rem;
}
</style>